{% extends 'base.html.twig' %}

{% block title %}{{ employe }}{% endblock %}

{% block body %}
    <h1><i class="fa-solid fa-user"></i> {{ employe }}</h1>
    <a><i class="fa-solid fa-pen-to-square"></i></a><br>
    <img src="https://via.placeholder.com/240X200">
    <p>Entreprise : <a href="{{ path('show_entreprise', {'id': employe.entreprise.id}) }}'">{{ employe.entreprise }}</a></p>
    <p>Date d'embauche : {{ employe.dateEmbauche | date('d-m-Y') }}</p>
    <p>Adresse : {{ employe.adresseFull }}</p>
    <p>Date de naissance : {{ employe.dateNaissance| date('d-m-Y') }}</p>

    <h2>Liste des collegues</h2>
{% endblock %}