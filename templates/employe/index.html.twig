{% extends 'base.html.twig' %}

{% block title %}Liste employés{% endblock %}

{% block body %}
    <h1>Liste des employés <span>{{ employes | length() }}</span></h1>
    <a href="{{ path('add_employe') }}" class="btn btn-success my-5">Ajouter un employé</a><br>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Employés</th>
                <th>Entreprise</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for employe in employes %}
                <tr>
                    <td><a href="{{ path('show_employe', {'id': employe.id}) }}">{{ employe }}</a></td>
                    <td><a href="{{ path('show_entreprise', {'id': employe.entreprise.id}) }}">{{ employe.entreprise }}</a></td>
                    <td><a href="{{ path('delete_employe', {'id': employe.id}) }}"><i class="fa-solid fa-trash-can"></i></a> <a href="{{ path('update_employe', {'id': employe.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
